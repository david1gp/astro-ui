---
import { iconGithub } from "~ui/icons/iconGithub"
import { iconNpm } from "~ui/icons/iconNpm"
import { buttonVariant } from "~ui/button/buttonCva"
import { astroElementId } from "~ui/layouts/parts/astroElementId"
import ThemeToggle from "~ui/layouts/parts/ThemeToggle.astro"
import LinkButton from "~ui/link/LinkButton.astro"
import { classArr } from "~ui/utils/classArr"
import { classMerge } from "~ui/utils/classMerge"
import LogoIconText from "./LogoIconText.astro"

interface Props {
  logoClass?: string
  logoImgClass?: string
  logoTextClass?: string
  class?: string
  innerClass?: string
  themeToggleClass?: string
}

const p = Astro.props
const buttonClasses = "px-0"
const iconClass = ""
const textClass = ""

const githubUrl = "https://github.com/adaptive-shield-matrix/astro-ui"
const npmUrl = "https://www.npmjs.com/package/@adaptive-sm/astro-ui"
---

<nav id={astroElementId.navbar} class={classMerge("w-full pt-1 pb-4", p.class)}>
  <div class={classArr("flex flex-wrap gap-x-2 justify-between items-center", "max-w-7xl mx-auto", p.innerClass)}>
    <LogoIconText
      class={classArr(buttonClasses, p.logoClass)}
      imageClass={classArr(iconClass, p.logoImgClass)}
      textClass={classArr(textClass, p.logoTextClass)}
    />
    <LinkButton icon={iconGithub} href={githubUrl} class={buttonClasses}>Code</LinkButton>
    <LinkButton icon={iconNpm} iconClass="size-8" href={npmUrl} class={buttonClasses}>Package</LinkButton>
    <ThemeToggle
      class={classArr(buttonClasses, p.themeToggleClass)}
      iconClass={iconClass}
      textClass={textClass}
      variant={buttonVariant.link}
    />
  </div>
</nav>
