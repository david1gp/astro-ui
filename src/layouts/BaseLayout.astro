---
import "./global.css"
import Navbar from "@/layout_parts/Navbar.astro"
import MinimalLayout from "~/layouts/MinimalLayout.astro"
import type { MayHaveClass } from "~/utils/ui/MayHaveClass"

export interface Props extends MayHaveClass {
  title: string
  description?: string
  meta?: Record<string, string>
  showNavbar?: boolean
  showFooter?: boolean
}

const p = Astro.props
const showNavbar = p.showNavbar ?? true
const showFooter = p.showFooter ?? true
---

<MinimalLayout title={p.title} description={p.description} meta={p.meta} class={p.class}>
  {showNavbar && <Navbar slot="navbar" />}

  <slot />

  {showFooter && <div slot="footer" />}
</MinimalLayout>
