---
import Navbar from "@/layout_parts/Navbar.astro"
import MinimalLayout from "~ui/layouts/MinimalLayout.astro"
import { classMerge } from "~ui/utils/classMerge"
import "../global.css"
import { classesBg100 } from "~ui/page/classesBg100"
import { classesBg50 } from "~ui/page/classesBg50"

export interface Props {
  title: string
  description?: string
  meta?: Record<string, string>
  class?: string
  showNavbar?: boolean
  showFooter?: boolean
  bodyClass?: string
}

const p = Astro.props
const showNavbar = p.showNavbar ?? true
const showFooter = p.showFooter ?? true
---

<MinimalLayout
  title={p.title}
  description={p.description}
  meta={p.meta}
  class={p.class}
  class={classMerge(p.class)}
  bodyClass={classMerge("px-4 pb-8", classesBg50.orange, p.bodyClass)}
>
  {showNavbar && <Navbar slot="navbar" />}

  <slot />

  {showFooter && <div slot="footer" />}
</MinimalLayout>
