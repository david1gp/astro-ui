---
import BaseLayout from "@/layouts/BaseLayout.astro"
import BgColorSelect from "@/layout_parts/BgColorSelect.astro"
import PageCenteredCard from "~ui/page/PageCenteredCard.astro"
import { classArr } from "~ui/utils/ui/classArr"
---

<BaseLayout title="Demo PageCenteredCard">
  <BgColorSelect/>

  <div class={classArr("mt-4 space-y-6")}>
    <div class="space-y-2">
      <h3 class="text-lg font-semibold">Basic PageCenteredCard</h3>
      <PageCenteredCard class="max-w-2xl">
        <div class="p-6 text-center">
          <h2 class="text-2xl font-bold mb-4">Centered Card Content</h2>
          <p>This content is both page-centered and wrapped in a card with default styling.</p>
        </div>
      </PageCenteredCard>
    </div>

    <div class="space-y-2">
      <h3 class="text-lg font-semibold">With Custom Outer Class</h3>
      <PageCenteredCard class="max-w-md border-2 border-blue-500 rounded-lg">
        <div class="p-4">
          <p class="text-center">Custom outer border and width.</p>
          <p class="text-sm mt-2">The card wrapper receives the outer class modifications.</p>
        </div>
      </PageCenteredCard>
    </div>

    <div class="space-y-2">
      <h3 class="text-lg font-semibold">With Custom Inner Class</h3>
      <PageCenteredCard classInner="bg-gradient-to-r from-purple-500 to-indigo-600 text-white p-8 rounded-xl shadow-lg">
        <div class="text-center">
          <h2 class="text-xl font-bold mb-3">Custom Inner Styling</h2>
          <p>Inner content area with gradient background and custom padding.</p>
        </div>
      </PageCenteredCard>
    </div>

    <div class="space-y-2">
      <h3 class="text-lg font-semibold">Full Width Card</h3>
      <PageCenteredCard class="w-full max-w-4xl">
        <div class="p-6">
          <p class="text-center">Full width (constrained by max-w) centered card.</p>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
            <div class="bg-gray-100 dark:bg-gray-700 p-3 rounded text-center">Section 1</div>
            <div class="bg-gray-100 dark:bg-gray-700 p-3 rounded text-center">Section 2</div>
            <div class="bg-gray-100 dark:bg-gray-700 p-3 rounded text-center">Section 3</div>
          </div>
        </div>
      </PageCenteredCard>
    </div>

    <div class="space-y-2">
      <h3 class="text-lg font-semibold">Multiple Cards Stacked</h3>
      <PageCenteredCard class="max-w-lg">
        <div class="space-y-4">
          <div class="p-4 bg-blue-50 dark:bg-blue-900/20 rounded border">
            <p>First stacked card content.</p>
          </div>
          <div class="p-4 bg-green-50 dark:bg-green-900/20 rounded border">
            <p>Second stacked card content below the first.</p>
          </div>
        </div>
      </PageCenteredCard>
    </div>
  </div>
</BaseLayout>
