---
import BaseLayout from "@/app/layouts/BaseLayout.astro"
import BgColorSelect from "@/app/layout_parts/BgColorSelect.astro"
import PageCentered from "~ui/page/PageCentered.astro"
---

<BaseLayout title="Demo PageCentered" class="space-y-6">
  <BgColorSelect />

  <div class="space-y-2">
