---
import { mdiInformationOutline } from "@mdi/js"
import BaseLayout from "@/app/layouts/BaseLayout.astro"
import BgColorSelect from "@/app/layout_parts/BgColorSelect.astro"
import Details from "~ui/details/Details.astro"
import { classArr } from "~ui/utils/classArr"
---

<BaseLayout title="Demo Details">
  <BgColorSelect />

  <div class={classArr("mt-4 space-y-4")}>
    <Details icon={mdiInformationOutline} title="Example Title" subtitle="Example subtitle">
      <div class="p-4 sm:p-6">
        <p>This is the content inside the details element.</p>
        <ul>
          <li>Item 1</li>
          <li>Item 2</li>
        </ul>
      </div>
    </Details>

    <Details title="No Icon">
      <p class="p-4">Content without icon.</p>
    </Details>
  </div>
</BaseLayout>
