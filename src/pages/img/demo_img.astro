---
import BaseLayout from "@/app/layouts/BaseLayout.astro"
import BgColorSelect from "@/app/layout_parts/BgColorSelect.astro"
import Img from "~ui/img/Img.astro"
import { classArr } from "~ui/utils/classArr"
import { classesGridCols2md } from "~ui/grid/classesGridCols"

const imagePath = "/placeholder.svg"
---

<BaseLayout title="Demo Img">
  <BgColorSelect />

  <div class={classArr(classesGridCols2md, "gap-8")}>
    <div class="space-y-2">
      <h3 class="text-lg font-semibold">Default Image</h3>
      <Img src={imagePath} alt="Default placeholder image" width={400} height={200} />
    </div>

    <div class="space-y-2">
      <h3 class="text-lg font-semibold">Image with Zoom on Hover</h3>
      <Img src={imagePath} alt="Zoom on hover image" zoomIn={true} width={400} height={200} />
    </div>

    <div class="space-y-2">
      <h3 class="text-lg font-semibold">Small Square Image</h3>
      <Img src={imagePath} alt="Small square image" size={150} />
    </div>

    <div class="space-y-2">
      <h3 class="text-lg font-semibold">Custom Class and Size</h3>
      <Img src={imagePath} alt="Image with custom class" class="rounded-lg shadow-md border" width={300} height={100} />
    </div>
  </div>
</BaseLayout>
