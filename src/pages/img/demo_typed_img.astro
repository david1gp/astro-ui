---
import type { ImageType } from "~ui/img/ImageType"
import BaseLayout from "@/app/layouts/BaseLayout.astro"
import BgColorSelect from "@/app/layout_parts/BgColorSelect.astro"
import TypedImg from "~ui/img/TypedImg.astro"
import { classArr } from "~ui/utils/classArr"

// generated with https://placeholderimage.dev
const imagePath = "/placeholder.svg"

const img: ImageType = {
  path: imagePath,
  alt: "Placeholder image, gray bg, 600x400 text.",
  width: 600,
  height: 400,
}
---

<BaseLayout title="Demo TypedImg">
  <BgColorSelect />

  <div class={classArr("mt-4 space-y-6")}>
    <div class="space-y-2">
      <h3 class="text-lg font-semibold">Default Typed Image (JPEG)</h3>
      <TypedImg img={img} />
    </div>

    <div class="space-y-2">
      <h3 class="text-lg font-semibold">SVG Image (No dimensions)</h3>
      <TypedImg img={img} class="invert" />
    </div>

    <div class="space-y-2">
      <h3 class="text-lg font-semibold">With Zoom on Hover</h3>
      <TypedImg img={img} zoomIn={true} />
    </div>

    <div class="space-y-2">
      <h3 class="text-lg font-semibold">Custom Class</h3>
      <TypedImg img={img} class="rounded-full shadow-lg border-2 border-gray-200" />
    </div>
  </div>
</BaseLayout>
