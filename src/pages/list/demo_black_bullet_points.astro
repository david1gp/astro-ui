---
import { mdiCircle } from "@mdi/js"
import BaseLayout from "@/app/layouts/BaseLayout.astro"
import BgColorSelect from "@/app/layout_parts/BgColorSelect.astro"
import BlackBulletPoints from "~ui/list/BlackBulletPoints.astro"
import { classArr } from "~ui/utils/classArr"
---

<BaseLayout title="Demo BlackBulletPoints" class="space-y-6">
  <BgColorSelect />

  <div class="space-y-2">
    <h3 class="text-lg font-semibold">Default Black Bullet Points</h3>
    <BlackBulletPoints
      points={[
        "First bullet point with default styling",
        "Second bullet point",
        "This is a much longer bullet point that will demonstrate how the component handles text wrapping and maintains proper alignment with the bullet points",
      ]}
    />
  </div>

  <div class="space-y-2">
    <h3 class="text-xl font-semibold">Custom Text Class</h3>
    <BlackBulletPoints
      points={["Text with custom styling", "Another point with different text styling"]}
      classText="text-xl font-semibold"
    />
  </div>
</BaseLayout>
